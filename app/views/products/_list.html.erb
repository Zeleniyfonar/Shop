<div class="list-products">
<div class="pseudo-list-products">
  <ul>
  <% cache ['store', Product.latest] do %>
    <% @products.each do |product| %>
      <% cache ['entry', product] do %>

      <li>
        <%= link_to product, :class => "link-product" do %>
          <%= image_tag(product.image_url) %>
          <h3><%= product.title %></h3>
          <div class="price">
            <%= number_to_currency(product.price) %>
          </div><!--/price_line-->
          <div class="details">
            <%= sanitize(product.description) %>
          </div>
        <% end %>

        <%= button_to line_items_path(product_id: product), remote: true, class: "add-to-cart button middle_green" do %>
          <i class="fa fa-shopping-cart"></i>   Add to cart
        <% end %>
        <%= button_to favorites_path(product_id: product), remote: true, class: "add-to-favorites button middle_green" do %>
          <i class="fa fa-heart"></i>
        <% end %>
        
      <%= form_for(@favorite, :url => url_for(:controller => 'favorites', :action => 'create')) do |f| %>
          <% if @favorite.errors.any? %>
              <div id="error_explanation">
                  <h2><%= pluralize(@favorite.errors.count, "error") %> prohibited this favorite from being saved:</h2>

                  <ul>
                      <% @favorite.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                      <% end %>
                  </ul>
              </div>
          <% end %>

          <div class="actions">
            <%= f.label :id %>
            <%= text_field_tag 'favorite[product_ids][]', product.id %>
          </div>

          <div class="actions">
            <%= f.submit %>
          </div>
      <% end %>

      </li><!--/entry-->
      
      <% end %>
    <% end %>
  <% end %>
  </ul>
</div><!--/pseudo-list-products-->
</div><!--/list-products-->