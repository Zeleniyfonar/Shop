<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<div class="search-products">
<%= search_form_for @search, url: category_path do |f| %>
  <div class="field">
    <%= f.label :title_cont, "Name contains" %>
    <%= f.text_field :title_cont %>
  </div>
  <div class="field">
    <%= f.label :price_gteq, "Price between" %>
    <%= f.text_field :price_gteq %>
    <%= f.label :price_lteq, "and" %>
    <%= f.text_field :price_lteq %>
  </div>
  <div class="actions"><%= f.submit "Search" %></div>
<% end %>
</div><!--/search products-->

<%= render 'categories/category_links' %>

<%= render 'products/list' %>

<% if @is_admin %>
	<%= link_to 'Edit', edit_category_path(@category) %> 
	<%= link_to 'Back', categories_path %>
<% end %>


