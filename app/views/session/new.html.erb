<div class="depot_form">
  <% if flash[:alert] %>
  	<p id="notice"><%= flash[:alert] %></p>
  <% end %>

  <%= form_tag do %>
	  <fieldset>
		  <legend>Зарегистрируйтесь, пожалуйста</legend>
		  
		  <div class="field">
				<%= label_tag :name, 'Имя:' %><br>
				<%= text_field_tag :name, params[:name]%>
		  </div>

		  <div class="field">
				<%= label_tag :password, 'Пароль:' %><br>
				<%= password_field_tag :password, params[:password] %>
		  </div>

		  <div>
			<%= submit_tag "Login", :class => "button middle_green" %>
	  </div>
	  </fieldset>
  <% end %>
</div>
