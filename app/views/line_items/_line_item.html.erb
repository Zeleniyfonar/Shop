<% if line_item == @current_item %>
  <tr id="current_item" data-item_id="<%= line_item.id %>">
<% else %>
  <tr data-item_id="<%= line_item.id %>">
<% end %>
    <td><%= line_item.id %></td>
    <td><%= line_item.quantity %>&times;</td>
    <td><%= line_item.product.title %></td>
    <td class="item_price"><%= number_to_currency(line_item.total_price) %></td>
    <td>
      <%= form_for line_item, :url => change_qty_orders_path(id: line_item), :remote => true do |f| %>
        <%= f.submit '+', :name => 'add', :class => 'add' %>
        <%= f.submit '-', :name => 'sub' %>
      <% end -%>
      <%= button_to 'Add to Cart', line_items_path(id: line_item),method: :patch, remote: true, class: "button middle_green" %>
    </td>
    <td>
      <span class = "deleteAction">Удалить</span>
      <%= link_to "Удалить", line_item, method: :delete, data: {confirm: "Точно удалть?"} %>
    </td>
  </tr>


      